<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee" id="WebApp_ID" version="4.0">
  <servlet>
    <servlet-name>start</servlet-name>
    <servlet-class>com.odin.configManager.Config</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
   <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.odin.pageController.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>checkCustomer</servlet-name>
    <url-pattern>/checkCustomer</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>checkCustomer</servlet-name>
    <servlet-class>com.odin.customerHandler.CustomerCheck</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>finalizeBill</servlet-name>
    <url-pattern>/finalizeBill</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>finalizeBill</servlet-name>
    <servlet-class>com.odin.pageController.FinalizeBill</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>createCustomer</servlet-name>
    <url-pattern>/createCustomer</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>createCustomer</servlet-name>
    <servlet-class>com.odin.customerHandler.CreateCustomer</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CheckItem</servlet-name>
    <url-pattern>/checkItem</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CheckItem</servlet-name>
    <servlet-class>com.odin.pageController.ItemCheck</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SaveBill</servlet-name>
    <url-pattern>/saveBill</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SaveBill</servlet-name>
    <servlet-class>com.odin.billingHandler.CommitBill</servlet-class>
  </servlet>
</web-app>